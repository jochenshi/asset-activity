.select-manager{
  padding : 20px;
  header{
    font-weight : bold;
  }
  span{
    display : inline-block;
    width : 30%;
    height : 30px;
    line-height : 30px;
    text-align : left;
    a,i{
      padding-right : 8px;
    }
  }
  li{
    border-top : 1px solid #dddddd;
    height : 40px;
    line-height : 40px;
    vertical-align : middle;
  }
}
.select-parent{
  display : inline-block;
  width : 40%;
  border-right : 1px solid #dddddd;
  padding-right: 20px;
  box-sizing : border-box;
  min-height : 400px;
  vertical-align : top;
  .select-selected{
    background-color: rgba(220,220,220,0.5);
  }
}
.select-child{
  display : inline-block;
  padding-left: 20px;
  box-sizing : border-box;
  width : 59%;
  min-height : 400px;
  vertical-align : top;
}
.error-message{
  color: red;
}